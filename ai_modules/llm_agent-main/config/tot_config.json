{
  "tot_settings": {
    "description": "Tree of Thoughts 아키텍처 설정",
    "max_depth": 4,
    "max_iterations": 15,
    "beam_width": 3,
    "k_thoughts": 3,
    "search_strategy": "beam",
    "min_score_threshold": 0.3,
    "cost_limit": 30.0,
    "timeout_seconds": 180,
    "diversification_factor": 0.1
  },
  
  "complexity_analysis": {
    "description": "쿼리 복잡도 분석 임계값",
    "tot_threshold": 0.4,
    "length_weight": 0.2,
    "keyword_weight": 0.15,
    "multi_requirement_weight": 0.2,
    "context_weight": 0.1,
    "data_keyword_weight": 0.1
  },
  
  "executor_settings": {
    "max_workers": 4,
    "default_timeout": 30,
    "cache_size": 200,
    "cache_ttl_hours": 2
  },
  
  "memory_settings": {
    "short_term_max_size": 1000,
    "decision_trace_limit": 500,
    "recent_queries_limit": 100,
    "faq_similarity_threshold": 0.8,
    "query_history_days": 30
  },
  
  "critic_settings": {
    "use_llm_threshold": 0.5,
    "accuracy_weight": 0.4,
    "consistency_weight": 0.3,
    "coverage_weight": 0.3,
    "llm_evaluation_frequency": 3
  },
  
  "tool_priorities": {
    "description": "도구별 우선순위 및 신뢰도",
    "SQL_QUERY": {
      "priority": 1,
      "base_confidence": 0.9,
      "cost": 1.0
    },
    "CURRICULUM_PLAN": {
      "priority": 2,
      "base_confidence": 0.85,
      "cost": 2.0
    },
    "FAISS_SEARCH": {
      "priority": 3,
      "base_confidence": 0.75,
      "cost": 1.5
    },
    "LLM_FALLBACK": {
      "priority": 4,
      "base_confidence": 0.7,
      "cost": 1.0
    }
  },
  
  "synthesis_settings": {
    "max_evidence_display": 5,
    "content_summary_length": 300,
    "include_debug_info": false,
    "auto_format_cards": true,
    "include_sources": true,
    "include_stats_table": true
  },
  
  "logging_settings": {
    "log_level": "INFO",
    "log_tot_decisions": true,
    "log_state_transitions": true,
    "log_performance_metrics": true,
    "export_session_logs": false
  },
  
  "performance_tuning": {
    "enable_caching": true,
    "parallel_execution": true,
    "early_termination": true,
    "adaptive_beam_width": false,
    "dynamic_cost_adjustment": false
  },
  
  "fallback_settings": {
    "max_simple_routing_attempts": 3,
    "fallback_to_simple_on_error": true,
    "simple_routing_keywords": [
      "안녕", "감사", "도움", "문의", "질문"
    ]
  }
}